        xmlns:local="clr-namespace:Data2Lua"
        mc:Ignorable="d"
        Title="Data2Lua" Height="219.609" Width="264.216" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen" Background="White" Icon="icon.ico">
